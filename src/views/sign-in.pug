extends layout.pug

block contents 
    div.bg-blue-900.h-full.pt-30vh
        div.p-8.mx-auto.rounded-xl.shadow-lg.bg-gray-300.w-96
            h1.text-4xl.font-bold.text-center.mt-8.text-gray-800 안녕하세요👋
            form.flex.flex-col.mt-16.space-y-4(method="POST" action="/sign-in")
                input.rounded.border.border-gray-200.p-2(name="email" type="email" placeholder="이메일")
                input.rounded.border.border-gray-200.p-2(name="password" type="password" placeholder="비밀번호")
                button.primary-btn.primary-btn.red-btn 이메일로 로그인
            div.flex.flex-row.justify-center.space-x-2.mt-4
                a.text-sm.text-gray-600(href="/request-reset-password") 비밀번호 찾기
                a.text-sm.ml-2.text-gray-600(href="/sign-up") 이메일로 회원가입
block scripts